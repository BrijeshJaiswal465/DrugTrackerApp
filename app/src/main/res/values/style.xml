<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/_15sdp</item>
        <item name="android:layout_marginEnd">@dimen/_15sdp</item>
        <item name="android:layout_marginBottom">@dimen/_10sdp</item>
        <item name="android:background">@drawable/rounded_button_bg</item>
        <item name="android:fontFamily">@font/sf_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="App.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
         <item name="android:hint">@string/hint</item> <!-- Optional default -->
        <item name="android:textColor">@color/text_hint_gray</item>
        <item name="android:textColorHint">@color/text_hint_gray</item>
        <item name="android:inputType">text</item>
    </style>
</resources>